

@{
    ViewBag.Title = "SampleAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SampleAdd</h2>



<form name="ProForm">


    <div class="col-md-6">
        <div class="form-group">
            <label>EmployeeName</label>

            <input type="text" id="CustomerName" class="form-control" />

